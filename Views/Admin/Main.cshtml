@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Main</title>
    @Html.Partial("PartialPage")
    <link rel="shortcut icon" href="~/Content/images/49.png">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
</head>

<body style="font-family:Verdana ;color:white;overflow-x:hidden ;background-image:url('/Content/images/nbg16.jpg');background-repeat:no-repeat;background-size:cover;">
    <div class="container-fluid">

        @Html.Partial("AdminPartialHeader")

        <h2>List of all products <br /> <br /> </h2>

        <div class="table-responsive">
            <table class="table" style="background:#145214   ;padding:10px;width:95%;border-radius:10px;margin-left:30px">

                <tr>
                    <td style="padding-left:10px"><br />&nbsp; ID <br /><br /></td>
                    <td><br />&nbsp; order_id <br /><br /></td>
                    <td><br />&nbsp; name <br /><br /></td>
                    <td><br />&nbsp; price <br /><br /></td>
                    <td><br /> &nbsp; stock <br /><br /> </td>
                    <td><br /> &nbsp; Quantity <br /><br /> </td>
                    <td><br /> &nbsp; cname <br /><br /> </td>
                    <td><br /> &nbsp; Pic <br /><br /> </td>
                </tr>

                <tbody>

                    @foreach (var s in Model)
                    {
                        <tr style="border:1px solid black">

                            <td style="padding:10px;padding-left:10px"> @s.item_id</td>
                            <td style="padding:10px"> @s.order_id</td>
                            <td style="padding:10px"> @s.name</td>
                            <td style="padding:10px"> @s.price</td>
                            <td style="padding:10px"> @s.quantity</td>
                            <td style="padding:10px"> @s.stock</td>
                            <td style="padding:10px"> @s.cname</td>
                            <td style="padding:10px"> @s.pic</td>


                            <td>

                                &nbsp; &nbsp; &nbsp; <a href="/Admin/Delete/@s.item_id">   Delete </a>
                                &nbsp; &nbsp; &nbsp; <a href="/Admin/Update/@s.item_id">   Update </a>
                                &nbsp; &nbsp; &nbsp;
                            </td>
                        </tr>



                    }


                </tbody>
            </table>
        </div>
        <!---->
        <br /><br />
    </div>





    <script src="~/js/bootstrap.js" type="text/javascript"></script>

</body>
</html>
