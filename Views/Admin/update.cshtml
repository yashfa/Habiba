@{
    Layout = null;
}


@model MvcApplication1.Models.product

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Update</title>
   
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    @Html.Partial("PartialPage")

    


</head>
<body style="font-family: Verdana; color: white; overflow-x: hidden; background-image: url('/Content/images/nbg16.jpg'); background-repeat: no-repeat; background-size: cover;">
    <div class="container-fluid">

        @Html.Partial("AdminPartialHeader")
        <br />
        <div class="col-md-12" style="">
            <div class="col-md-3"></div>
            <div id="Signup_area" class="col-md-4">
                <br />  <h2 style="text-align: center"> Update Product </h2> <br />

                <form action="/Admin/EditOK/@Model.item_id" method="POST">

                    <strong>Product Name</strong><br>
                    <input type="Text" id="name" name="name" class="form-control" placeholder="Enter Product Name" value="@Model.name" required />
                    <span id="name1"></span><br><br>

                    <strong>Price</strong><br>
                    <input type="Text" id="price" name="price" class="form-control" placeholder="Enter Price" value="@Model.price" required />
                    <span id="name1"></span><br><br>


                    <strong>Quantity</strong><br><br>

                    <input type="Text" name="quantity" class="form-control" placeholder="Enter Quantity" value="@Model.quantity" required />


                    <strong>Category</strong><br><br>
                    <input type="Text" name="cname" class="form-control" placeholder="Enter Category" value="@Model.cname" required />
                    <br>

                    <strong> Stock </strong><br><br>
                    <input type="Text" name="stock" class="form-control" placeholder="Enter Stock " value="@Model.stock" required />
                    <br>


                    <input type="file" name="pic" /> <br /> <br>  <br />

                    <button type="submit" class="btn btn-primary btn-block" value="submit"> Done </button> <br />




                </form>

            </div>
            <div class="col-md-5"> </div>

        </div>

        <div class="col-md-12"> <br /> <br /> </div>


    </div>


    <script src="~/js/bootstrap.js" type="text/javascript"></script>

</body>
</html>
